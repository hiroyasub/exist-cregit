<!-- =========================== Pipelines ================================= -->
 
	<map:pipelines>
	 	<map:pipeline>
	 		<map:match pattern="biblio.xml">
		        <map:generate src="biblio.xml"/>
		        <map:transform type="cinclude"/>
		        <map:transform src="context://stylesheets/doc2html-2.xsl"/>
				<map:serialize encoding="UTF-8" type="xhtml"/>
	        </map:match>
	            
	        <map:match pattern="bibquery.xml">
	        	<map:generate src="bibquery.xml"/>
	        	<map:transform src="stylesheets/bibquery.xsl">
	        		<map:parameter name="use-request-parameters" value="true"/>
	        	</map:transform>
	        	<map:transform type="xmldb" label="xmldb">
	        		<map:parameter name="user" value="guest"/>
	        		<map:parameter name="password" value="guest"/>
	        	</map:transform>
	            <map:transform type="cinclude"/>
				<map:transform src="stylesheets/biblio_rdf.xsl"/>
				<map:serialize encoding="UTF-8" type="xhtml"/>
	        </map:match>
		</map:pipeline>
	</map:pipelines>

</map:sitemap>

<document xmlns:ci="http://apache.org/cocoon/include/1.0">
    
    <header>
        <logo src="logo.jpg"/>
        <title>Open Source XML Database</title>
        <author email="meier@ifs.tu-darmstadt.de">Wolfgang M. Meier</author>
        <style href="login.css"/>
    </header>

    <!-- include sidebar -->
    <ci:include src="sidebar.xml"/>
  
    <body>

        <section title="Login">
            <p>This resource is protected. Please login. If you have not
            set up any users, login as &quot;admin&quot; and leave the
            password field empty.</p>
            
            <form action="xadmin.xsp" method="POST">
                <table class="login" border="0">
                    <tr>
                        <td width="30%">
                            User:
                        </td>
                        <td width="70%">
                            <input type="text" name="user"/>
                        </td>
                    </tr>
                    <tr>
                        <td width="30%">
                            Password:
                        </td>
                        <td width="70%">
                            <input type="password" name="password"/>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" align="left">
                            <input type="submit"/>
                        </td>
                    </tr>
                </table>
            </form>
        </section>
    </body>
</document>
                    

<document xmlns:xi="http://www.w3.org/2001/XInclude">
    <!-- include header -->
    <xi:include href="header.xml"/>
    <xi:include href="sidebar.xml"/>
  
    <body>

        <section title="Login">
            <p>This resource is protected. Please login. If you have not
            set up any users, login as &quot;admin&quot; and leave the
			password field empty. For testing purposes, you may also log in
			as &quot;guest&quot; with password &quot;guest&quot;.</p>
            
            <form action="xadmin.xsp" method="POST" id="login">
                <table border="0">
                    <tr>
                        <td width="30%">
                            User:
                        </td>
                        <td width="70%">
                            <input type="text" name="user"/>
                        </td>
                    </tr>
                    <tr>
                        <td width="30%">
                            Password:
                        </td>
                        <td width="70%">
                            <input type="password" name="password"/>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" align="right">
                            <input type="submit"/>
                        </td>
                    </tr>
                </table>
            </form>
        </section>
    </body>
</document>
                    

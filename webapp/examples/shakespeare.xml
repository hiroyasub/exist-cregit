<?xml version="1.0" encoding="UTF-8"?>

<document xmlns:ci="http://apache.org/cocoon/include/1.0">
  
	<header>
    	<logo src="logo.jpg"/>
    	<title>Open Source XML Database</title>
    	<author email="meier@ifs.tu-darmstadt.de">Wolfgang M. Meier</author>
    	<style type="text/css">
    		tr.tablehead {
    			background-color: #0b88e8;
    		}
    		th {
    			color: #FFFFFF;
    		}
    	</style>
	</header>
       
   	<!-- include sidebar -->
   	<ci:include src="sidebar.xml"/>
       
   	<body>
   		<section title="Shakespeare's Works">
   		
	   		<form action="process.xml" method="GET">
	   			<table width="90%" cellpadding="5" cellspacing="0" border="0">
	       			<tr class="tablehead">
		     			<th align="left">Context</th>
		     			<th align="left">Comparison</th>
		     			<th align="left">Words</th>
		     		</tr>
		     		<tr>
		     			<td align="left">
		     				<select name="context" size="1">
		     					<option>SCENE</option>
		     					<option>SPEECH</option>
		     				</select>
		     			</td>
		     			<td align="left">
		     				<select name="mode" size="1">
		     					<option>contains</option>
		     					<option>near</option>
		     				</select>
		     			</td>
		     			<td align="left">
		     				<input type="text" name="terms" size="50"/>
		     			</td>
		     		</tr>
		     		<tr>
						<td width="80%" colspan="2" align="left" valign="center">
							<select name="howmany" size="1">
						    	<option>30</option>
						    	<option>50</option>
						    	<option>100</option>
						 	</select>
							<small>hits will be displayed</small>
						</td>
	             		<td width="20%" align="right">
	                 		<input type="submit" />
	             		</td>
	     			</tr>
	     		</table>
	     	</form>
	     </section>
     </body>
</document>
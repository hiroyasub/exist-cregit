<?xml version="1.0" encoding="UTF-8"?>

<document xmlns:ci="http://apache.org/cocoon/include/1.0">

	<!-- include header -->
    <ci:include src="context://header.xml"/>
       
    <!-- include sidebar -->
    <ci:include src="sidebar.xml"/>
   
  	<body>
  
    	<section title="Query results">
    	<xml-source>
			<xmldb:collection 
				xmlns:xmldb="http://exist-db/transformer/1.0"
				uri="xmldb:exist:///db">
				<xmldb:for-each query="//SPEECH[LINE &amp;= 'love']"
					from="0" to="9">
					<section>
						<title><xmldb:select-node query="../TITLE/text()"/></title>
					</section>
					<xmldb:current-node/>
				</xmldb:for-each>
			</xmldb:collection>
		</xml-source>
		</section>
	</body>
</document>
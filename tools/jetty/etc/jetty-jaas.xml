<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN" "http://www.eclipse.org/jetty/configure_9_3.dtd">

<Configure id="Server" class="org.eclipse.jetty.server.Server">

    <!-- ======================================================== -->
    <!-- java.security.auth.login.config System property          -->
    <!-- This is usually a runtime parameter to the jvm, but      -->
    <!-- it is placed here for convenience.                       -->
    <!-- ======================================================== -->
    <Call class="java.lang.System" name="setProperty">
      <Arg>java.security.auth.login.config</Arg>
      <Arg><Property name="jetty.base" default="." />/etc/login.conf</Arg>
    </Call>
  
    <Call name="addBean">
      <Arg>
        <New id="jaasLoginService" class="org.eclipse.jetty.jaas.JAASLoginService">
          <Set name="name">Test JAAS Realm</Set>
          <Set name="LoginModuleName">JAASLoginService</Set>
        </New>
      </Arg>
    </Call>

</Configure>

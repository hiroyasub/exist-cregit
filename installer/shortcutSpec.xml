<?xml version="1.0" encoding="UTF-8"?>
<shortcuts>
	<programGroup defaultName="eXist XML Database" location="applications"/>
	
	<shortcut name="eXist Database Startup" target="$INSTALL_PATH/bin/startup.bat"
		description="eXist Database Startup" programGroup="yes"
        desktop="yes" iconFile="$INSTALL_PATH/icon.bmp"/>
	<shortcut name="eXist Local Homepage" target="$INSTALL_PATH/index.html"
		description="The local homepage of the server" programGroup="yes"
        desktop="no"/>
	<shortcut name="eXist Client Shell"
		target="$INSTALL_PATH/bin/client.bat"
		description="Start the command-line client" programGroup="yes"
        desktop="yes"/>
	<shortcut name="Database Shutdown"
		target="$INSTALL_PATH/bin/shutdown.bat"
        description="Cleanly shutdown a running database" 
        programGroup="yes" desktop="yes"/>
	<shortcut name="Uninstall" target="$INSTALL_PATH/Uninstaller/uninstaller.jar"
		description="Uninstall eXist" programGroup="yes"/>
</shortcuts>

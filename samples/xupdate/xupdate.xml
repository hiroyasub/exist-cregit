<?xml version="1.0" encoding="ISO-8859-1"?>
<xu:modifications version="1.0" xmlns:xu="http://www.xmldb.org/xupdate">
	<!-- append a new address -->
	<xu:append select="/addressbook">
		<xu:element name="address">
			<fname>Joschka</fname>
			<lname>Fischer</lname>
			<city>Berlin</city>
		</xu:element>
	</xu:append>

	<!-- append work phone to each address -->
	<xu:insert-after select="//address/city">
		<xu:element name="email">
			<xu:attribute name="type">work</xu:attribute>
			<xu:text>common@web.de</xu:text>
		</xu:element>
	</xu:insert-after>


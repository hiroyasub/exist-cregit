<!-- Use this file to deploy some handlers/chains and services      -->
<!-- Two ways to do this:                                           -->
<!--   java org.apache.axis.client.AdminClient deploy.wsdd          -->
<!--      after the axis server is running                          -->
<!-- or                                                             -->
<!--   java org.apache.axis.utils.Admin client|server deploy.wsdd   -->
<!--      from the same directory that the Axis engine runs         -->

<deployment
    xmlns="http://xml.apache.org/axis/wsdd/"
    xmlns:java="http://xml.apache.org/axis/wsdd/providers/java">

  <!-- Services from QueryService WSDL service -->

  <service name="Query" provider="java:RPC" style="rpc" use="encoded">
      <parameter name="wsdlTargetNamespace" value="urn:exist"/>
      <parameter name="wsdlServiceElement" value="QueryService"/>
      <parameter name="schemaUnqualified" value="urn:exist"/>
      <parameter name="wsdlServicePort" value="Query"/>
      <parameter name="className" value="org.exist.soap.QuerySoapBindingSkeleton"/>
      <parameter name="wsdlPortType" value="Query"/>
      <parameter name="typeMappingVersion" value="1.2"/>
      <parameter name="allowedMethods" value="*"/>
      <parameter name="scope" value="Session"/>

      <arrayMapping
        xmlns:ns="urn:exist"
        qname="ns:ArrayOf_xsd_base64Binary"
        type="java:byte[][]"
        innerType="cmp-ns:byte" xmlns:cmp-ns="http://www.w3.org/2001/XMLSchema"
        encodingStyle="http://schemas.xmlsoap.org/soap/encoding/"
      />
      <arrayMapping
        xmlns:ns="urn:exist"
        qname="ns:ArrayOfQueryResponseCollection"
        type="java:org.exist.soap.QueryResponseCollection[]"
        innerType="cmp-ns:QueryResponseCollection" xmlns:cmp-ns="urn:exist"
        encodingStyle="http://schemas.xmlsoap.org/soap/encoding/"
      />
      <typeMapping
        xmlns:ns="urn:exist"
        qname="ns:Collection"
        type="java:org.exist.soap.Collection"
        serializer="org.apache.axis.encoding.ser.BeanSerializerFactory"
        deserializer="org.apache.axis.encoding.ser.BeanDeserializerFactory"
        encodingStyle="http://schemas.xmlsoap.org/soap/encoding/"
      />
      <arrayMapping
        xmlns:ns="urn:exist"
        qname="ns:ArrayOfQueryResponseDocument"
        type="java:org.exist.soap.QueryResponseDocument[]"
        innerType="cmp-ns:QueryResponseDocument" xmlns:cmp-ns="urn:exist"
        encodingStyle="http://schemas.xmlsoap.org/soap/encoding/"
      />
      <arrayMapping
        xmlns:ns="urn:exist"
        qname="ns:ArrayOf_xsd_string"
        type="java:java.lang.String[]"
        innerType="cmp-ns:string" xmlns:cmp-ns="http://www.w3.org/2001/XMLSchema"
        encodingStyle="http://schemas.xmlsoap.org/soap/encoding/"
      />
      <typeMapping
        xmlns:ns="urn:exist"
        qname="ns:QueryResponse"
        type="java:org.exist.soap.QueryResponse"
        serializer="org.apache.axis.encoding.ser.BeanSerializerFactory"
        deserializer="org.apache.axis.encoding.ser.BeanDeserializerFactory"
        encodingStyle="http://schemas.xmlsoap.org/soap/encoding/"
      />
      <typeMapping
        xmlns:ns="urn:exist"
        qname="ns:QueryResponseDocument"
        type="java:org.exist.soap.QueryResponseDocument"
        serializer="org.apache.axis.encoding.ser.BeanSerializerFactory"
        deserializer="org.apache.axis.encoding.ser.BeanDeserializerFactory"
        encodingStyle="http://schemas.xmlsoap.org/soap/encoding/"
      />
      <typeMapping
        xmlns:ns="urn:exist"
        qname="ns:QueryResponseCollection"
        type="java:org.exist.soap.QueryResponseCollection"
        serializer="org.apache.axis.encoding.ser.BeanSerializerFactory"
        deserializer="org.apache.axis.encoding.ser.BeanDeserializerFactory"
        encodingStyle="http://schemas.xmlsoap.org/soap/encoding/"
      />
  </service>
</deployment>
